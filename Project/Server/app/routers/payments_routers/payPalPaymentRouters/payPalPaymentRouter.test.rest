    "cus_sex": true,
    "cus_address": "3/2 Ninh Kiều Cần Thơ",
    "cus_phoneNumber": "0000000000"
    },
    
    // Mảng nhận id và số lượng
    "products":[
        {"prod_no": 1, "prod_quantity": 1},
